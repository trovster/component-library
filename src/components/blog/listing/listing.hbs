<div class="listing listing--posts">
  {{#each posts }}
    <a href="blog-post" class="post">
      <div class="post__inner">
        <h3 class="post__title">{{titlecase post.title }}</h3>
        <p class="post__date">{{date post.date }}</p>
        <div class="post__summary">
          <p>{{ post.desc }}</p>
        </div>
      </div>
    </a>
  {{/each}}
</div>
