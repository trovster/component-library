<div class="movie">
  <div class="movie__inner">
    <h3 class="movie__title">{{titlecase movie.title }}</h3>
    <p class="movie__watched">Last watched: <em>{{date '' }}</em></p>

    {{ render '@movie-rating' movie }}
    {{ render '@movie-meta' movie merge=true }}

    <div class="movie__summary">
      <p>{{ movie.desc }}</p>
    </div>

    {{ render '@movie-review' }}
  </div>
</div>
