<div class="listing listing--movies">
  <ul>
    {{#each movies }}
    <li>
      <a href="page-movie-detail" class="movie">
        <div class="movie__header">
          <div class="movie__intro">
            <h3 class="movie__title">{{titlecase movie.title }}</h3>
            <p class="date movie__year">{{ movie.year }}</p>
          </div>
          {{ render '@movie__rating' movie }}
        </div>
        <div class="movie__summary">
          <p>{{ movie.desc }}</p>
        </div>
      </a>
    </li>
    {{/each}}
  </ul>
</div>
